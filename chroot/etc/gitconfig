[color]
	pager = false
[core]
	pager = vim -RM -
[man]
	viewer = MANPAGER
[man "MANPAGER"]
	cmd = "git_man() { vim -M '+runtime ftplugin/man.vim' \"+Man $1\"\
	'+only' ; } ; git_man"
[pager]
	log = false
	diff = false
	grep = false
[include] path = /etc/git/config
[core] excludesFile = /etc/git/ignore
[core] attributesFile = /etc/git/attributes
